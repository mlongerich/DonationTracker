# Development-only settings for webpack dev server
# This file is automatically loaded by react-scripts in development mode
# and ignored in production builds

# API Configuration
REACT_APP_API_URL=http://localhost:3001

# Disable webpack persistent cache to prevent stale bundles
DISABLE_ESLINT_PLUGIN=false
FAST_REFRESH=true

# More aggressive file watching (300ms polling interval)
WATCHPACK_POLLING=300

# Enable source maps for debugging
GENERATE_SOURCEMAP=true
